<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>bundle</id>
	<formats>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<fileSets>
		<fileSet>
			<directory>target/</directory>
			<outputDirectory>${project.artifactId}</outputDirectory>
			<includes>
				<include>${project.build.finalName}.war</include>
				<include>${project.artifactId}.war</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>target/</directory>
			<outputDirectory>./version</outputDirectory>
			<includes>
				<include>*.version</include>
			</includes>
		</fileSet>
	</fileSets>
	<files>
		<file>
			<source>src/main/resources/logback.properties</source>
			<outputDirectory>${project.artifactId}</outputDirectory>
			<lineEnding>unix</lineEnding>
			<destName>logback.properties.sample</destName>
			<fileMode>0644</fileMode>
		</file>
		<file>
			<source>src/main/resources/chromedriver.exe</source>
			<outputDirectory>${project.artifactId}</outputDirectory>
			<destName>chromedriver.exe</destName>
			<fileMode>0777</fileMode>
		</file>
		<file>
			<source>src/main/resources/application.properties</source>
			<outputDirectory>${project.artifactId}</outputDirectory>
			<lineEnding>unix</lineEnding>
			<destName>application.properties.sample</destName>
			<fileMode>0644</fileMode>
		</file>
	</files>
</assembly>